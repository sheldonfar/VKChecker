{
	"manifest_version": 2,

	"name": "VKChecker",
	"version": "1.0",
	"description": "A simple checker of unread VK messages",

	"permissions": [
		"http://vk.com/im",
		"http://vk.com/feed"
	],

	"background": {
		"scripts": ["js/background.js", "js/jquery.js"]
	},

	"browser_action": {
		"default_title": "VK Checker", 
		"default_icon": "images/icon.png",
		"default_popup": "popup.html"
	},
	
	"icons": {
		"16": "images/vk16.png",
        "48": "images/vk48.png",
        "128": "images/vk128.png" 	
	}
}